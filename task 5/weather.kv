AddLocationForm:

<AddLocationForm>:
    orientation: "vertical"
    search_input: search_box
    BoxLayout:
        height: "40dp"  # 1
        size_hint_y: None
        TextInput:
        	id: search_box
            size_hint_x: 50  # 2
        Button:
            text: "Search"
            size_hint_x: 25  # 3
            on_press: root.search_location()
        Button:
            text: "Current Location"
            size_hint_x: 25  # 4
    ListView:  # 5
        item_strings: ["Palo Alto, MX", "Palo Alto, US"]

